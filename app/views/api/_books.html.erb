  <ul>
    <% @books.each do |book| %>
     <div id="book_cover"><%= image_tag(book['image']) %></div>
      <div id="book_title"><li><%=link_to book['title'], book['details_url'] %></li></div>
      <li>By: 
        <% if book['authors'] != nil %>
          <%= book['authors'][0]['name'] %>
          <% else %>
         <span id="missing_author">Author name unavailable</span>
          <% end %>
      </li>
      <li div id="format">(<%= book['format']['name']%>)</li>
     <div class="availability" id="<%= book['availability']['id'] %>"   <li><%= book['availability']['id'].capitalize %></li></div>
      <hr />
    <% end %>  
  </ul>